{
  "name": "illa-design",
  "private": true,
  "description": "illa UI Component",
  "repository": "git@github.com:illacloud/illa-design.git",
  "author": "ILLA Cloud <opensource@illasoft.com>",
  "license": "Apache-2.0",
  "resolutions": {
    "graceful-fs": "4.2.9"
  },
  "scripts": {
    "sb": "pnpm build-all-components && pnpm storybook dev -p 6006",
    "bs": "pnpm build-all-components && pnpm storybook build",
    "build-all-components": "NODE_OPTIONS=--max-old-space-size=10240 turbo run build",
    "lint": "eslint packages/**/src/ --ext .ts,.tsx --config .eslintrc.js",
    "format": "prettier --write \"packages/**/*.{ts,tsx}\"",
    "prepare": "husky install",
    "plop": "plop new",
    "plop-icon": "plop new-icon"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@emotion/react": "^11.10.8",
    "@illa-design/react": "^1.0.22",
    "@rollup/plugin-typescript": "^11.1.2",
    "@storybook/addon-a11y": "^7.0.26",
    "@storybook/addon-essentials": "^7.0.26",
    "@storybook/react": "^7.0.26",
    "@storybook/react-vite": "^7.0.26",
    "@storybook/theming": "^7.0.26",
    "@types/react": "^18.2.5",
    "@types/react-dom": "^18.2.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-react": "^1.1.7",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "plop": "^3.1.2",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0",
    "storybook": "^7.0.26",
    "turbo": "1.8.3",
    "typescript": "^5.0.4",
    "vite": "^4.4.2"
  },
  "engines": {
    "pnpm": "^8"
  }
}
